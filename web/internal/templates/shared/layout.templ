package shared

import "time"

templ header() {
	<header class="relative bg-gray-900">
		@nav()
	</header>
}

templ nav() {
	<nav aria-label="Top" class="mx-auto max-w-7xl sm:px-6 lg:px-8">
		<div class="border-b-2 border-gray-200 px-4 pb-14 sm:border-b-4 sm:px-0 sm:pb-0">
			<div class="flex h-16 items-center justify-between">
				<div class="flex flex-1">
					<a href="/devices">
						<span class="font-extrabold text-3xl text-gray-100">Sell-U-Lar</span>
					</a>
				</div>
				<div class="absolute inset-x-0 bottom-0 sm:static sm:flex-1 sm:self-stretch">
					<div class="flex h-14 space-x-8 overflow-x-auto border-t-2 border-gray-200 px-4 pb-px sm:h-full sm:justify-center sm:overflow-visible sm:border-t-0 sm:pb-0">
						<a href="/devices" class="flex items-center text-sm font-medium text-gray-100 hover:text-gray-400">All</a>
						<a href="/devices/apple" class="flex items-center text-sm font-medium text-gray-100 hover:text-gray-400">Apple</a>
						<a href="/devices/oppo" class="flex items-center text-sm font-medium text-gray-100 hover:text-gray-400">Oppo</a>
						<a href="/devices/realme" class="flex items-center text-sm font-medium text-gray-100 hover:text-gray-400">Realme</a>
						<a href="/devices/samsung" class="flex items-center text-sm font-medium text-gray-100 hover:text-gray-400">Samsung</a>
						<a href="/devices/vivo" class="flex items-center text-sm font-medium text-gray-100 hover:text-gray-400">Vivo</a>
					</div>
				</div>
				<div class="flex flex-1 items-center justify-end">
					<a href="#" class="p-2 text-gray-400 hover:text-gray-500">
						<span class="sr-only">Search</span>
						<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" data-slot="icon" aria-hidden="true" class="size-6">
							<path d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" stroke-linecap="round" stroke-linejoin="round"></path>
						</svg>
					</a>
					<div class="ml-4 flow-root lg:ml-8">
						<a href="#" class="group -m-2 flex items-center p-2">
							<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" data-slot="icon" aria-hidden="true" class="size-6 shrink-0 text-gray-400 group-hover:text-gray-500">
								<path d="M15.75 10.5V6a3.75 3.75 0 1 0-7.5 0v4.5m11.356-1.993 1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 0 1-1.12-1.243l1.264-12A1.125 1.125 0 0 1 5.513 7.5h12.974c.576 0 1.059.435 1.119 1.007ZM8.625 10.5a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm7.5 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" stroke-linecap="round" stroke-linejoin="round"></path>
